<h1><%= @journal.journal_title %></h1>

<!-- All Journal posts for this journal go here -->



<h3><%= link_to "Post", {:controller => "posts", :action => "new", :journal => @journal.id }%></h3>


<h3>Posts in this journal</h3>
<% @journal.posts.each do |post| %>
  <p>
    <%= link_to(post.post_title, post_path(post))%>
  </p>
<% end %>
